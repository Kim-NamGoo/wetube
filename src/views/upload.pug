extends base.pug

block content
  div
    button#startBtn Start Rocord

  if errorMessage
    span= errorMessage
  form(method="POST", enctype="multipart/form-data")
    label(for="video")
    input#video(name="video", type="file", accept="video/*", required)
    input(placeholder="Title", required, type="text", name="title")
    input(placeholder="Description", required, type="text", name="description")
    input(
      placeholder="Hashtags, separated by comma.",
      required,
      type="text",
      name="hashtags"
    )
    input(type="submit", value="Upload Video")
block scripts
  script(src="/static/js/recorder.js") 
